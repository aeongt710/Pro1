@page
@model Pro1.Pages.Tickets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ticket.Id" />
            <div class="form-group">
                <label asp-for="Ticket.TicketName" class="control-label"></label>
                <input asp-for="Ticket.TicketName" class="form-control" />
                <span asp-validation-for="Ticket.TicketName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.Price" class="control-label"></label>
                <input asp-for="Ticket.Price" class="form-control" />
                <span asp-validation-for="Ticket.Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ticket.isPurchased" /> @Html.DisplayNameFor(model => model.Ticket.isPurchased)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.TicketCreatorId" class="control-label"></label>
                <select asp-for="Ticket.TicketCreatorId" class="form-control" asp-items="ViewBag.TicketCreatorId"></select>
                <span asp-validation-for="Ticket.TicketCreatorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
