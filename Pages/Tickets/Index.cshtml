        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TicketName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isPurchased)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketCreator.Email)
            </td>
